<Window x:Class="KinectApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinectApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600" Closed="Window_Closed">
    <Grid>
        <TabControl Padding="0">
            <TabItem Header="Record">
                <Grid Width="950">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Style="{StaticResource FeedLabel}">Record View</TextBlock>
                    <TextBlock Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Style="{StaticResource StatusLabel}" Text="{Binding KinectStatusText}"/>

                    <Grid x:Name="record" Grid.Row="1" Style="{StaticResource GridCamera}">
                        <Image Name="recordCamera"/>
                        <Canvas Name="recordCanvas"/>
                    </Grid>

                    <StackPanel Grid.Row="2">
                        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Right" Style="{StaticResource BusyLabel}" Text="{Binding RecordStatusText}"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                            <Button x:Name="fileRecord" Margin="5" Width="320" Height="30" Content="Record Movement" Click="FileRecord_Click"/>
                            <Button x:Name="pauseRecord" Margin="5" Width="50" Content="Stop"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Playback">
                <Grid Width="950">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Style="{StaticResource FeedLabel}">Playback View</TextBlock>
                    <TextBlock Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Style="{StaticResource StatusLabel}" Text="{Binding KinectStatusText}"/>

                    <Grid x:Name="playback" Grid.Row="1" Style="{StaticResource GridCamera}">
                        <Image Name="playbackCamera"/>
                        <Canvas Name="playbackCanvas"/>
                    </Grid>

                    <StackPanel Grid.Row="2">
                        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Right" Style="{StaticResource BusyLabel}" Text="{Binding PlaybackStatusText}"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                            <Button x:Name="PlayBackFile" Margin="5" Width="320" Height="30" Content="Select playback file..." Click="PlayBackFile_Click"/>
                            <Button x:Name="PausePlayback" Margin="5" Width="50" Content="Pause"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Compare">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.7*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Width="950">
                        <Grid.RowDefinitions>
                            <RowDefinition Height=".5*"/>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Style="{StaticResource FeedLabel}">Comparison View</TextBlock>
                        <TextBlock Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Style="{StaticResource StatusLabel}" Text="{Binding KinectStatusText}"/>

                        <Grid x:Name="compare" Grid.Row="1" Style="{StaticResource GridCamera}">
                            <Image Name="compareCamera"/>
                            <Canvas Name="compareCanvas"/>
                        </Grid>

                        <StackPanel Grid.Row="2">
                            <TextBlock VerticalAlignment="Top" HorizontalAlignment="Right" Style="{StaticResource BusyLabel}" Text="{Binding PlaybackStatusText}"/>
                            <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                                <Button x:Name="CompareFile" Margin="5" Width="320" Height="30" Content="Select movement file..." Click="CompareFile_Click"/>
                                <Button x:Name="StartComparison" Margin="5" Width="200" Height="30" Content="Start Comparison"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Column="1" Width="569">
                        <Grid.RowDefinitions>
                            <RowDefinition Height=".5*"/>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
