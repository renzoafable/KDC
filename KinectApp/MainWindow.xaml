<Window x:Class="KinectApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinectApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <TabControl Padding="0">
            <TabItem Header="Playback">
                <Grid Width="950">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="59*"/>
                        <ColumnDefinition Width="891*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Name="playback" Style="{StaticResource GridCamera}" Grid.ColumnSpan="2" Margin="10,42,-10,41">
                        <Image Name="playbackCamera"/>
                        <Canvas Name="plyabackCanvas"/>
                    </Grid>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Column="1" Margin="223.049,0,282,0">
                        <Button Margin="5" Width="316" Height="30" Content="Select playback file..."/>
                        <Button Margin="5" Width="50" Content="Play"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Compare">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Name="record" Style="{StaticResource GridCamera}">
                            <Image Name="r_camera"/>
                            <Canvas Name="r_canvas"/>
                        </Grid>
                        <Grid Grid.Column="1" Name="live" Style="{StaticResource GridCamera}">
                            <Image Name="camera"/>
                            <Canvas Name="canvas"/>
                        </Grid>
                    </Grid>
                    <Grid Style="{StaticResource GridButtonsStyle}" Grid.Row="1">
                        <StackPanel Style="{StaticResource StackPanelButtonsStyle}">
                            <Button Content="Color" Style="{StaticResource ButtonStyle}" Click="Color_Click" />
                            <Button Content="Depth" Style="{StaticResource ButtonStyle}" Click="Depth_Click" />
                            <Button Content="Infrared" Style="{StaticResource ButtonStyle}" Click="Infrared_Click" />
                            <Button Content="Body" Style="{StaticResource ButtonStyle}" Click="Body_Click" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
