<Window x:Class="KinectApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinectApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" Closed="Window_Closed">
    <Grid>
        <TabControl Padding="0">
            <TabItem Header="Playback">
                <Grid Width="950">
                    <Grid.RowDefinitions>
                        <RowDefinition Height=".5*"/>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height=".5*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Style="{StaticResource FeedLabel}">Playback Feed</TextBlock>
                    <TextBlock Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Style="{StaticResource StatusLabel}" Text="{Binding KinectStatusText}"/>

                    <Grid Grid.Row="1" Name="playback" Style="{StaticResource GridCamera}">
                        <Image Name="playbackCamera"/>
                        <Canvas Name="playbackCanvas"/>
                    </Grid>

                    <StackPanel Grid.Row="2">
                        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Right" Style="{StaticResource StatusLabel}" Text="{Binding PlaybackStatusText}"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                            <Button x:Name="PlayBackFile" Margin="5" Width="316" Height="30" Content="Select playback file..." Click="PlayBackFile_Click"/>
                            <Button x:Name="PlayBackButton" Margin="5" Width="50" Content="Play" Click="PlayBackButton_Click"/>
                            <Button x:Name="PausePlayback" Margin="5" Width="50" Content="Pause" Click="PausePlayback_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Compare">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Name="record" Style="{StaticResource GridCamera}">
                            <Image Name="r_camera"/>
                            <Canvas Name="r_canvas"/>
                        </Grid>
                        <Grid Grid.Column="1" Name="live" Style="{StaticResource GridCamera}">
                            <Image Name="camera"/>
                            <Canvas Name="canvas"/>
                        </Grid>
                    </Grid>
                    <Grid Style="{StaticResource GridButtonsStyle}" Grid.Row="1">
                        <StackPanel Style="{StaticResource StackPanelButtonsStyle}">
                            <Button Content="Color" Style="{StaticResource ButtonStyle}" Click="Color_Click" />
                            <Button Content="Depth" Style="{StaticResource ButtonStyle}" Click="Depth_Click" />
                            <Button Content="Infrared" Style="{StaticResource ButtonStyle}" Click="Infrared_Click" />
                            <Button Content="Body" Style="{StaticResource ButtonStyle}" Click="Body_Click" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
