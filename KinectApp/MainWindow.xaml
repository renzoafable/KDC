<Window x:Class="KinectApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinectApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" Closed="Window_Closed">
    <Grid>
        <TabControl Padding="0">
            <TabItem Header="Record">
                <Grid Width="950">
                    <Grid.RowDefinitions>
                        <RowDefinition Height=".5*"/>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height=".5*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Style="{StaticResource FeedLabel}">Record Feed</TextBlock>
                    <TextBlock Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Style="{StaticResource StatusLabel}" Text="{Binding KinectStatusText}"/>

                    <Grid x:Name="record" Grid.Row="1" Style="{StaticResource GridCamera}">
                        <Image Name="recordCamera"/>
                        <Canvas Name="recordCanvas"/>
                    </Grid>

                    <StackPanel Grid.Row="2">
                        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Right" Style="{StaticResource BusyLabel}" Text="{Binding RecordStatusText}"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                            <Button x:Name="fileRecord" Margin="5" Width="316" Height="30" Content="Record Movement" Click="FileRecord_Click"/>
                            <Button x:Name="pauseRecord" Margin="5" Width="50" Content="Stop"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Playback">
                <Grid Width="950">
                    <Grid.RowDefinitions>
                        <RowDefinition Height=".5*"/>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height=".5*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Style="{StaticResource FeedLabel}">Playback Feed</TextBlock>
                    <TextBlock Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Style="{StaticResource StatusLabel}" Text="{Binding KinectStatusText}"/>

                    <Grid x:Name="playback" Grid.Row="1" Style="{StaticResource GridCamera}">
                        <Image Name="playbackCamera"/>
                        <Canvas Name="playbackCanvas"/>
                    </Grid>

                    <StackPanel Grid.Row="2">
                        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Right" Style="{StaticResource BusyLabel}" Text="{Binding PlaybackStatusText}"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                            <Button x:Name="PlayBackFile" Margin="5" Width="316" Height="30" Content="Select playback file..." Click="PlayBackFile_Click"/>
                            <Button x:Name="PausePlayback" Margin="5" Width="50" Content="Pause"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Compare">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height=".5*"/>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height=".5*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="1" x:Name="live" Style="{StaticResource GridCamera}" Width="950">
                        <Image Name="camera"/>
                        <Canvas Name="canvas"/>
                    </Grid>
                    
                    <Grid Style="{StaticResource GridButtonsStyle}" Grid.Row="2">
                        <StackPanel Style="{StaticResource StackPanelButtonsStyle}">
                            <Button Content="Body" Style="{StaticResource ButtonStyle}" Click="Body_Click" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
